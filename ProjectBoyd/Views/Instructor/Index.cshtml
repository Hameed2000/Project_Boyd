@{
    ViewData["Title"] = "Dashboard";
    string page = "InstructorDashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css">
<!-- Library used for the bar chart to represet data -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
<!-- Script for the circular progress bar -->
<script src="~/js/dashboard-charts.js"></script>
<script src="~/js/login.js"></script>

<partial name="_SideBar" model="page"/>
<component type="typeof(InstructorDashboard)" render-mode="ServerPrerendered" />


<!-- Used to create the bar chart -->
<script>

    function LoadChart() {
        const chartElement = document.getElementById("dashboard-classes-taught-graph")
        try {
            const chart = new Chart(chartElement, {
                type: "bar",
                data: {
                    labels: ['Feb', "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "Classes Taught",
                        data: [5, 3, 1, 7, 10],

                        backgroundColor: ["#309DFF"],
                        borderRadius: "5"
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }

                }

            })
        } catch (exception_var) {
            console.log("Graph already exists");
        }

    }

</script>